<%-include("../partials/header")-%>


<div class="container" style="margin-top: 20px;" >
    <h1 style="text-align: center;">Edit <%=campground.name%></h1>    
    <div style="width: 40%; margin: 0 auto;">
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
       
        <div class="form-group">
            <label for="name">Name </label>
            <input type="text" id="name" class="form-control" value="<%=campground.name%>" name="campground[name]">
        </div>

          <div class="form-group">
            <label for="price">Price </label>
            <input type="number" id="price" class="form-control" value="<%-campground.price%>" name="campground[price]" min="0.01" step="0.01">
        </div>


        <div class="form-group">
        <label for="image">Image </label>
            <input type="text" class="form-control" id="image" value="<%=campground.image%>"  name="campground[image]">
        </div>

        <div class="form-group">
          <label for="image">Description</label>
              <input type="text" class="form-control" id="description" value="<%=campground.description%>"  name="campground[description]">
          </div>

        <div class="form-group">
        <button class="btn  btn-success btn-block">submit</button>
        </div>

    </form>
        <a href="/campgrounds">Go Back</a>

        <div style="text-align: center;">
            <%-include("../partials/footer")-%> 
        </div>
    </div>
</div>

